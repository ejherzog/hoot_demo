<!DOCTYPE html>
<html>
    <%- include('./partials/_head'); %>
  <body>
    <%- include('./partials/_nav'); %>
    <div class="container mt-2">
      <hr>
      <section class="w-75">
        <h4>Add Retroactive Boolean Record</h4>
        <form action="/retro" method="POST">
          <div class="form-group">
            <label for="variable">Variable:</label>
            <select class="form-select" name="variable" id="variable" required>
                <option selected disabled value="">--- Select One ---</option>
                <% variables.forEach(function(s) { %>
                    <% if (s.type == 'boolean') { %>
                        <option value="<%= s.variable %>"><%= s.variable %></option>
                     <% } %>
                <% }) %>
            </select>
          </div>
          <div class="form-group">
            <input type="radio" id="data" name="data" value="1" checked>
            <label for="data">Yes</label><br>
            <input type="radio" id="data" name="data" value="0">
            <label for="data">No</label>
          </div>
          <div class="form-group">
            <label for="date">Date</label>
            <input type="date" name="date" id="date" value="<%= today %>"/>
          </div>
          <div class="form-group">
            <label for="time">Time</label>
            <input type="time" name="time" id="time" value="10:00:00" />
          </div>
          <button type="submit" class="btn btn-primary">Record Boolean</button>
        </form>
      </section>
      <hr>
      <section class="w-75">
        <h4>Add Retroactive Scalar Record</h4>
        <form action="/retro" method="POST">
            <div class="form-group">
                <label for="variable">Variable:</label>
                <select name="variable" id="variable" required>
                    <option selected disabled value="">--- Select One ---</option>
                    <% variables.forEach(function(s) { %>
                        <% if (s.type == 'scalar') { %>
                            <option value="<%= s.variable %>"><%= s.variable %></option>
                         <% } %>
                    <% }) %>
                </select>
              </div>
          <div class="form-group">
            <label for="data">Number:</label>
            <input type="number" id="data" name="data" min="0">
          </div>
          <div class="form-group">
            <label for="date">Date</label>
            <input type="date" name="date" id="date" value="<%= today %>"/>
          </div>
          <div class="form-group">
            <label for="time">Time</label>
            <input type="time" name="time" id="time" value="10:00:00" />
          </div>
          <button type="submit" class="btn btn-primary">Record Scalar</button>
        </form>
      </section>
      <%- include('./partials/_footer'); %>
    </div>
  </body>
</html>